<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24.0dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/marign_middle"
            android:layout_height="@dimen/marign_middle"
            android:layout_marginRight="@dimen/marign_middle"
            android:clickable="true"
            android:src="@drawable/dot"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="@dimen/marign_middle"
            android:layout_height="@dimen/marign_middle"
            android:clickable="true"
            android:src="@drawable/dot"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="@dimen/marign_middle"
            android:layout_height="@dimen/marign_middle"
            android:layout_marginLeft="@dimen/marign_middle"
            android:clickable="true"
            android:src="@drawable/dot"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="@dimen/marign_mid"
            android:layout_height="@dimen/marign_mid"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:visibility="gone"
            />
    </LinearLayout>

</RelativeLayout>